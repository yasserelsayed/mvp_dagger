<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/athitiregular</item>
    </style>

    <style name="AuthHeader">
        <item name="android:layout_marginBottom">-10dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/ThemRed</item>
        <item name="android:fontFamily">@font/anton</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AuthEditText">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/size_15dp</item>
        <item name="android:paddingBottom">@dimen/size_8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/size_200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_marginTop">@dimen/size_10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/size_170dp</item>
        <item name="android:layout_height">@dimen/size_40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="GuestButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/size_10dp</item>
        <item name="android:textColor">@color/ThemRed</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/size_170dp</item>
        <item name="android:layout_height">@dimen/size_40dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
